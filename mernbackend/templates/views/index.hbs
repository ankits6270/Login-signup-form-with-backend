<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shop Landing Page</title>
  <!-- Bootstrap CSS via CDN -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <style>
    /* Customize CSS here */
    .hero {
      background-image: url('https://via.placeholder.com/1500x600'); /* Your hero image */
      background-size: cover;
      background-position: center;
      height: 600px;
    }
    .featured-products {
      background-color: #f8f9fa;
      padding: 50px 0;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="#">Sports Shop</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
            <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/login">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/register">Register</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="hero">
    <div class="container h-100">
      <div class="row h-100 align-items-center">
        <div class="col-lg-6">
          <h1 class="display-4 text-white">Welcome to Your Shop</h1>
          <p class="lead text-white">Discover our latest collections and shop now!</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Products Section -->
  <section class="featured-products">
    <div class="container">
      <h2 class="text-center mb-4">Featured Products</h2>
      <div class="row">
        <!-- Featured Product Cards -->
        <div class="col-md-4">
          <div class="card mb-4">
            <img src="https://via.placeholder.com/300" class="card-img-top" alt="Product Image">
            <div class="card-body">
              <h5 class="card-title">Product 1</h5>
              <p class="card-text">Description of product 1.</p>
              <a href="#" class="btn btn-primary">Buy Now</a>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card mb-4">
            <img src="https://via.placeholder.com/300" class="card-img-top" alt="Product Image">
            <div class="card-body">
              <h5 class="card-title">Product 2</h5>
              <p class="card-text">Description of product 2.</p>
              <a href="#" class="btn btn-primary">Buy Now</a>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card mb-4">
            <img src="https://via.placeholder.com/300" class="card-img-top" alt="Product Image">
            <div class="card-body">
              <h5 class="card-title">Product 3</h5>
              <p class="card-text">Description of product 3.</p>
              <a href="#" class="btn btn-primary">Buy Now</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Bootstrap JavaScript (Optional, only if you need Bootstrap JS functionality) -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
